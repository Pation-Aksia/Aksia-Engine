
for file in *.cpp; do
if [ "$file" != "Main.cpp" ]; then
    echo -n "compiling $file. . .  "
    g++ -c "$file" -o "${file%.cpp}.o" -lX11 -lGL
    echo "done!"
fi
done

ar rcs libAEngine.a ./*.o
echo "static library \"libAEngine.a\" created"

rm ./*.o

mkdir ./Dependancies

mv libAEngine.a ./Dependancies

echo -n "copying headers. . .  "
for file in *.h; do
    cp "$file" ./Dependancies
done
echo "done!"